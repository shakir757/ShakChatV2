<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_chat_to"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/text_view_chat_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_message_row"
        android:maxWidth="200dp"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:text="Oh, it's cool! You must continue this work"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/image_view_chat_to"
        app:layout_constraintTop_toTopOf="@+id/image_view_chat_to" />

</androidx.constraintlayout.widget.ConstraintLayout>